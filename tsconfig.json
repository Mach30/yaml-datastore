{
  "include": ["./src"],
  // "exclude": [
  // ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "typedocOptions": {
    "entryPoints": ["./src"],
    "plugin": ["typedoc-plugin-markdown"],
    "out": "./docs"
  }
}
